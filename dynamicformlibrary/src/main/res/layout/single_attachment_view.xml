<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_50"
    android:background="@color/almost_white">

    <TextView
        android:id="@+id/smallText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_45"
        android:layout_margin="@dimen/margin_size_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/_null"
        android:layout_toStartOf="@+id/linearLayout"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/margin_size_10"
        android:textColor="@color/black"
        android:textColorHint="@color/serv_text_date_bg"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_size_5"    android:layout_marginRight="@dimen/margin_size_5"

        android:layout_alignParentEnd="true"
        android:background="@color/edit_text_date_bg">

        <ImageView
            android:id="@+id/ic_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_3"
            android:src="@drawable/ic_attachment_black" />
    </LinearLayout>


</RelativeLayout>