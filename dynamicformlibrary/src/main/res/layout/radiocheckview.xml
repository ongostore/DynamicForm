<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_size_10"
    android:layout_marginTop="@dimen/margin_size_5"
    android:layout_marginBottom="@dimen/margin_size_5"
    android:layout_marginEnd="@dimen/margin_size_10"
    android:background="@color/almost_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_size_10"
        android:layout_marginTop="@dimen/margin_size_5"
        android:textSize="@dimen/text_size_16"
        android:layout_height="wrap_content"
        android:hint="@string/_null" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_45"
        android:layout_margin="@dimen/margin_size_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/_null"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/margin_size_10"
        android:textColor="@color/black"
        android:textColorHint="@color/serv_text_date_bg"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>