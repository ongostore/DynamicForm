<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_50"
    android:background="@color/almost_white">

    <EditText
        android:id="@+id/smallText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_45"
        android:layout_margin="@dimen/margin_size_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/_null"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/margin_size_10"
        android:textColor="@color/black"
        android:textColorHint="@color/serv_text_date_bg"
        android:textSize="@dimen/text_size_16" />
</RelativeLayout>